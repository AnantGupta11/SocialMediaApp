<link rel="stylesheet" href="/css/signUp.css">

<form action="/users/create" method="POST" class="signup">
    <label for="email">Enter your Email:</label>
    <input type="email" name="email" autocomplete="off" required><br>
    <label for="name">Enter Your Name:</label>
    <input type="text" name="name" autocomplete="off" required><br>
    <label for="password">Enter Password:</label>
    <input type="password" name="password" style="margin-left: 12px;" autocomplete="off" required><br>
    <label for="confirmpassword">Confirm Password:</label>
    <input type="password" name="confirmpassword" style="margin-left: 1px;" autocomplete="off" required><br>
    <input type="submit" value="Sign Up" id="btn">
</form>